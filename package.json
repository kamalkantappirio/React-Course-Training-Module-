{
  "name": "mhg-bluesky",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "8.1.2"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "classnames": "^2.2.5",
    "concurrently": "^3.4.0",
    "cors": "^2.8.3",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "heroku-node-settings": "^1.0.2",
    "jsforce": "^1.8.0",
    "map-filter-reduce": "^3.0.3",
    "morgan": "^1.7.0",
    "newrelic": "^1.40.0",
    "npm-run-all": "^4.0.2",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-router": "^2.6.1",
    "react-scripts": "^1.0.7",
    "node-sass-chokidar": "^0.0.3"
  },
  "scripts": {
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "concurrently \"PORT=3001 node server\"  \"NODE_ENV=production npm-run-all -p watch-css start-js\"",
    "start:dev": "concurrently \"PORT=3001 node server\"  \"NODE_ENV=development npm-run-all -p watch-css start-js\"",
    "postinstall": "react-scripts build",
    "start:client": "react-scripts start",
    "start:server": "node server",
    "build": "npm run build-css && react-scripts build",
    "eject": "react-scripts eject",
    "test": "mocha test"
  },
  "proxy": "http://0.0.0.0:3001",
  "eslintConfig": {
    "extends": "./node_modules/react-scripts/config/eslint.js",
    "env": {
      "mocha": true
    },
    "rules": {
      "strict": 0
    }
  }
}
